        }

        .demo-txt{
            position: absolute;
            z-index: 1;
            color: #000;
            background: white;
            width: 360px;
            height: 200px;
            margin:auto;
            padding: auto;
            left: 0;
            right: 0;
            bottom: 0;
            top: 0;
            display: none;
            padding: 10px;
            border-radius: 5px;
            -webkit-border-radius: 5px;
            -moz-border-radius: 5px;
        }
        .demo-txt button{
            float:left;
            margin-top: 140px;
            margin-left: 60px;
            width: 70px;
            height: 30px;
            border-radius: 5px;
            -webkit-border-radius: 5px;
            -moz-border-radius: 5px;
        }
        .btn{
            margin-left: 100px;
        }
        .text{
            position: absolute;
