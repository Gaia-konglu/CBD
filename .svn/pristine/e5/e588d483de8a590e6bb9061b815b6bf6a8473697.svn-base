@charset "UTF-8";

* {
	margin: 0;
	padding: 0;
	list-style: none;
}

html,body {
	background: #FFFFFF;
	font: normal 15px "Microsoft YaHei";
}

#top {
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	height: 80px;
	background-color: rgba(244, 247, 250, 0);
	border-bottom:solid 3px #d3d1db;
}

#top_logo {
	width: 300px;
	float: left;
	vertical-align: middle;
	height: 65px;
	line-height: 65px;
	padding: 1px 1px 1px 40px;
}

#top_links {
	width: 480px;
	height: 65px;
	float: right;
	line-height: 65px;
	color: #ADADAD;
	line-height: 65px;
	position: relative;
}

#top_op {
	width: 400px;
}

#top_op ul {
	list-style-type: none;
	margin-top:30px;
}

#top_op ul li {
	display: inline-block;
	margin-right: 20px;
	margin-left: -9px;
}

#top_op ul li img {
	vertical-align: text-top;
}

#top_links a:link,#nav_links a:visited,#nav_links a:hover,#nav_links a:active
	{
	list-style: none;
	text-decoration: none;
	color: #fff;
}

#top_links a:hover {
	list-style: none;
	text-decoration: underline;
	color: #fff;
}

#top_close {
	width: 80px;
	position: absolute;
	right: 28px;
	top: 30px;
	left: 351px;
	border-left: 0px solid #171717;
	vertical-align: text-top;
	cursor:pointer;
}



#side {
	position: absolute;
	left:0px;
	top: 75px;
	bottom: 0px;
	width: 220px;
	overflow: hidden;
	margin-right:0px;
}

#main {
	position: absolute;
	left: 231px;
	top: 140px;
	bottom: 0px;
	right: 10px;
	width: auto;
	z-index: 2;
	overflow: hidden;
}

#top_nav {
	position: fixed;
	width: 77%;
	top: 70px;
	left: 257px;
	height: 58px;
	line-height: 70px;
	color: #8A8A8A;
	font-size: 14px;
	border-bottom: 1px solid #EDEDED;
}

#left_menu {
	width: 60px;
	position: absolute;
	top: 70px;
	bottom: 0px;
	background: #044599;
	overflow: hidden;
}

#left_menu_cnt {
	width: 220px;
	position: absolute;
	top: 9px;
	bottom: 0px;
	left: 0px;
	overflow: auto;
	background: #F3F2F0;
}

#left_menu_cnt #nav_module {
	position: fixed;
	padding-left: 10px;
	background: #F1F1F1;
}

#left_menu_cnt #nav_resource {
	margin-top: 60px;
	overflow: auto;
}

#TabPage2 li {
	padding: 19px 9px 19px 15px;
	cursor: pointer;
}

.selected {
	background: #FFF;
	cursor: pointer;
}
