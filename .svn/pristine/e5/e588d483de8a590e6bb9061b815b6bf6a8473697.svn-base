            padding: 0;
            margin: 0;
        }
        body{
            padding: 0;
            background-size: cover;
             overflow-y: hidden;
        }

        .demo-bg{
            position: absolute;
            left: 0;
            top: 0;
            z-index: 0;
            width: 100%;
            height: 671px;
            /*filter:Alpha(opacity=50);*/
            background-color: rgba(0,0,0,0.4); /*实现透明背景*/
